<% provide(:title, "Create new course") %>
<%= form_for [:admin, @course] do |f| %>
  <div class="col-md-8">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :time_limit %><br>
      <%= f.number_field :time_limit, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, rows: 10, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>